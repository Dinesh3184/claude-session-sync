{
  "description": "Auto-sync sessions and settings when a Claude Code session ends",
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/session-end.py",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}
